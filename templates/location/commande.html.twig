{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}


{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    <div class="container">
        <div class="leftSide">
            <div class="row">
                <label for="">Titre du livre :</label>
                <input type="text">
            </div>
            <div class="row">
                <label for="">Auteur :</label>
                <input type="text">
            </div>
            <div class="row">
                <label for="">Description :</label>
                <input type="text">
            </div>
        </div>
        <div class="rightSide">
            <div class="imageContainer">
                <div class="faceContainer">
                    <img class="face" src="{{ asset('assets/pictures/Systemium_face-removebg.png') }}" alt="Front of the book">
                </div>
                <div class="backContainer">
                    <img class="back" src="{{ asset('assets/pictures/Systemium_dos-removebg.png') }}" alt="Back of the book">
                </div>
            </div>
            <div class="row">
                <label for="">Date d'emprunt :</label>
                <input type="text">
            </div>
            <div class="row">
                <label for="">Date de retour :</label>
                {{ form_row(commandeForm.dateRetour, {
                    label: 'Date de retour : '
                }) }}
            </div>
            <div class="row">
                <a href="{{ path('app_location') }}" class="validate">Valider</a>
            </div>
        </div>
    </div>
{% endblock %}
