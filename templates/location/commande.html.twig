{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <div class="container">
        <div class="leftSide">
            <div class="row">
                <label for="">Titre du livre : {{ livre.titre }}</label>
            </div>
            <div class="row">
                <label for="">Auteur : {{ livre.auteur }}</label>

            </div>
            <div class="row">
                <label for="">Description : {{ livre.description }}</label>
            </div>
        </div>
        <div class="rightSide">
            <div class="imageContainer">
                <div class="faceContainer">
                    <img class="face" src="{{ asset('assets/pictures/Systemium_face-removebg.png') }}" alt="Front of the book">
                </div>
                <div class="backContainer">
                    <img class="back" src="{{ asset('assets/pictures/Systemium_dos-removebg.png') }}" alt="Back of the book">
                </div>
            </div>
            <div class="row">
                <label for="">Date d'emprunt : {{ "now"|date("d/m/Y")  }}</label>
            </div>
            <div class="row">
                <label for="">Date de retour :</label>
{#                <label for="">Date de retour :</label>#}
                {{ form_row(commandeForm.dateRetour, {
                    'attr': {'label': 'hidden', 'hidden': 'hidden'}
                }) }}
            </div>
            <div class="row">
                <a href="{{ path('app_location') }}" class="validate">Valider</a>
            </div>
        </div>
    </div>
{% endblock %}
