{% extends 'base.html.twig' %}

{% block title %}Profil utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/profil.css') }}">
{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock header %}
    <div class="user-profile">
        <div>User name: <div>{{ app.user.username }}</div></div>
        <div>First name: <div>{{ app.user.firstname }}</div></div>
        <div>Last name: <div>{{ app.user.lastname }}</div></div>
        <div>Email: <div>{{ app.user.email }}</div></div>
        <div>Address: <div>{{ app.user.address }}</div></div>
        <div id="navigation-container">
        <a href="{{path('app_forgot_password_request')}}" class="change-password-link">Changer mon mot de passe</a>
        <a href="{{path('app_user_index')}}" class="modify-info">Modifier mes informations</a>
        </div>
    </div>
{% endblock body %}
