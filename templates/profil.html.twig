{% extends 'base.html.twig' %}

{% block title %}Profil utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/profil.css') }}">
{% endblock %}

{% block body %}
{% block header %}
{{ parent() }}
{% endblock header %}
<div class="user-profile">
    <div>User name: {{ app.user.username }}</div>
    <a href="#">Changer mon mot de passe</a>
    <div>First name: {{ app.user.firstname }}</div>
    <div>Last name: {{ app.user.lastname }}</div>
    <div>Email: {{ app.user.email }}</div>
    <div>Address: {{ app.user.address }}</div>
</div>
{% endblock body %}
